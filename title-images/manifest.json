{
  "manifest_version": 2,
  "name": "Title Images",
  "version": "1.0.0",

  "description": "Preview images for the current tab's website title",
  "icons": {
    "19": "assets/icon-19.png",
    "38": "assets/icon-38.png",
    "64": "assets/icon-64.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "assets/icon-19.png",
      "38": "assets/icon-38.png",
      "64": "assets/icon-64.png"
    },
    "default_title": "Title Images",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]

}
